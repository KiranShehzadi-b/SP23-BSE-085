<h4>Edit Product</h4>

<form action="/admin/products/edit/<%= product._id %>" method="post" >
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input name="title" type="text" class="form-control" id="titleInput" placeholder="Enter Title" value="<%= product.title %>" />
    <small class="form-text text-muted">Product Title</small>
  </div>

  <div class="form-group">
    <label for="descriptionInput">Description</label>
    <textarea name="description" class="form-control" id="descriptionInput" placeholder="Enter Description"><%= product.description %></textarea>
    <small class="form-text text-muted">Product Details</small>
  </div>

  <div class="form-group">
    <label for="priceInput">Price</label>
    <input name="price" type="text" class="form-control" id="priceInput" placeholder="Enter Price" value="<%= product.price %>" />
    <small class="form-text text-muted">Product Price in PKR</small>
  </div>
  <div class="form-group">
    <label for="categorySelect">Category</label>
    <select name="category" class="form-control" id="categorySelect">
      <% categories.forEach((category) => { %>
        <option value="<%= category._id %>"><%= category.name %></option>
      <% }); %>
    </select>
    <small class="form-text text-muted">Select a category for the product</small>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info">Update Product</button>
  </div>
</form>
