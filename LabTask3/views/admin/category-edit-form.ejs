<h4>Edit Category</h4>

<form action="/admin/categories/edit/<%= category._id %>" method="post" >
  <div class="form-group">
    <label for="nameInput">Category Name</label>
    <input name="name" type="text" class="form-control" id="nameInput" placeholder="Enter Category Name" value="<%= category.name %>" />
    <small class="form-text text-muted">Category Name</small>
  </div>

  <div class="form-group">
    <label for="descriptionInput">Description</label>
    <textarea name="description" class="form-control" id="descriptionInput" placeholder="Enter Category Description"><%= category.description %></textarea>
    <small class="form-text text-muted">Category Description</small>
  </div>

  <div class="form-group">
    <label for="slugInput">Slug</label>
    <input name="slug" type="text" class="form-control" id="slugInput" placeholder="Enter Slug" value="<%= category.slug %>" />
    <small class="form-text text-muted">Slug for URL</small>
  </div>

  <div class="form-group">
    <label for="productCountInput">Product Count</label>
    <input name="productCount" type="number" class="form-control" id="productCountInput" placeholder="Enter Product Count" value="<%= category.productCount %>" />
    <small class="form-text text-muted">Number of Products in this Category</small>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-info">Update Category</button>
  </div>
</form>
