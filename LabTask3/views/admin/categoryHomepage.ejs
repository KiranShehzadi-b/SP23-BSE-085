<h3><%- pageTitle %></h3>

<a href="/admin/categories/create" class="btn btn-info">Create New Category</a>

<div class="row">
  <% for (let index = 0; index < categories.length; index++) { %>
      <div class="col-4">
          <div class="card" style="width: 18rem;">
              <div class="card-body">
                  <h5 class="card-title"><%= categories[index].name %></h5>
                  <p class="card-text"><strong>Slug:</strong> <%= categories[index].slug %></p>
                  <p class="card-text"><strong>Product Count:</strong> <%= categories[index].productCount %></p>
                  <p class="card-text"><%= categories[index].description %></p>
                  <div class="d-flex justify-content-between">
                      <a href="/admin/categories/edit/<%= categories[index]._id %>" class="btn btn-warning">Edit</a>
                      <a href="/admin/categories/delete/<%= categories[index]._id %>" class="btn btn-danger">Delete</a>
                  </div>
              </div>
          </div>
      </div>
  <% } %>
</div>
