<h3><%- pageTitle %></h3>
<% if (messages && messages.length > 0) { %> <!-- Ensure messages is checked -->
  <div class="alert flash-message">
    <% messages.forEach(function(message) { %>
      <h5><%= message %></h5>
    <% }); %>
  </div>
<% } %>
<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>City</th>
      <th>Address</th>
      <th>Total Price</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.user.email %></td>
        <td><%= order.city %></td>
        <td><%= order.address %></td>
        <td><%= order.totalAmount %></td>
        <td><%= order.status %></td>
        <td>
          <a href="/admin/orders/edit/<%= order._id %>" class="btn btn-warning">Edit</a>
          <a href="/admin/orders/delete/<%= order._id %>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
<a href="/admin/dashboard" class="btn btn-secondary mt-3">Back To Dashboard</a>
